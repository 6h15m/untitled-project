{
  "compilerOptions": {
    "baseUrl": "./",
    "types": ["node"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "allowJs": true,
    "strict": true,
    "lib": ["es2020", "dom"],
    "typeRoots": ["../node_modules/@types", "./types"],
    "outDir": "./dist"
  },
  "references": [
    { "path": "../models" }
  ]
}